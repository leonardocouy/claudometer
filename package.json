{
  "name": "claudometer",
  "version": "1.6.1",
  "description": "Claudometer - Tray-first macOS + Linux app to monitor Claude web usage limits.",
  "author": "Softaworks",
  "license": "MIT",
  "scripts": {
    "dev": "bun run sync-versions && bunx tauri dev",
    "build": "bun run sync-versions && bunx tauri build",
    "dev:ui": "vite",
    "build:ui": "vite build",
    "sync-versions": "bun run scripts/sync-versions.ts",
    "typecheck": "tsc --noEmit",
    "check": "biome check .",
    "lint": "biome lint --write",
    "format": "biome format --write .",
    "check:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml -- --check && bun run lint:rust",
    "format:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "lint:rust": "cargo clippy --manifest-path src-tauri/Cargo.toml --all-targets -- -D warnings",
    "lint:rust:fix": "cargo clippy --manifest-path src-tauri/Cargo.toml --fix --allow-dirty --allow-staged --all-targets",
    "test": "bun test && cargo test --manifest-path src-tauri/Cargo.toml"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-opener": "^2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@tauri-apps/cli": "^2.0.0",
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
